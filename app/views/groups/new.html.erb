 <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Create group</h2>

     <%= form_with model: @group, local:true do |f| %>

      <label for="group_name">Group name</label>
       <%= f.text_field :name, class: "form-control group_name" %>

      <label for="group_introduction">Introduction</label>
       <%= f.text_area :introduction ,class: "form-control group_introduction" %>

      <label for="group_image">Group image</label>
       <%= f.attachment_field :image, class: "form-control-file group_image" %>

      <div class = "form-group">
       <%= f.submit "Create group", class: "btn btn-secondary  bg-info text-white" %>
      </div>
      <% end %>
      </div>
     </div>
  </div>